# Ruby worker-specific environment variables
# Appended to base.env + test.env for Ruby worker

# Worker identification
WORKER_ID=ruby-worker-test
# Single-instance mode ports (cluster mode uses dynamic ports from cluster scripts)
# Port 8082 matches IntegrationTestManager::setup_ruby_worker() default
TASKER_WEB_BIND_ADDRESS=0.0.0.0:8082
# TAS-177: gRPC API endpoint
TASKER_WORKER_GRPC_BIND_ADDRESS=0.0.0.0:9102
# Worker configuration
TASKER_CONFIG_PATH=${WORKSPACE_PATH}/config/tasker/generated/worker-test.toml

# Ruby worker template path
TASKER_TEMPLATE_PATH=${WORKSPACE_PATH}/tests/fixtures/task_templates/ruby

# Ruby-specific
RUBY_HANDLER_PATH=${WORKSPACE_PATH}/workers/ruby/spec/handlers
RUBY_WORKER_ENABLED=true
