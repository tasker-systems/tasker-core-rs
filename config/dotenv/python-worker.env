# Python worker-specific environment variables
# Appended to base.env + test.env for Python worker

# Worker identification
WORKER_ID=python-worker-test
# Single-instance mode ports (cluster mode uses dynamic ports from cluster scripts)
# Port 8083 matches IntegrationTestManager::setup_python_worker() default
TASKER_WEB_BIND_ADDRESS=0.0.0.0:8083

# Worker configuration
TASKER_CONFIG_PATH=${WORKSPACE_PATH}/config/tasker/worker-test.toml

# Python worker template path
TASKER_TEMPLATE_PATH=${WORKSPACE_PATH}/tests/fixtures/task_templates/python

# Python-specific
PYTHON_HANDLER_PATH=${WORKSPACE_PATH}/workers/python/tests/handlers
PYTHON_WORKER_ENABLED=true
PYTHONPATH=${WORKSPACE_PATH}/workers/python/src:${WORKSPACE_PATH}/workers/python/tests
