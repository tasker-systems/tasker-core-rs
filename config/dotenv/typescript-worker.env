# TypeScript worker-specific environment variables
# Appended to base.env + test.env for TypeScript worker

# Worker identification
WORKER_ID=typescript-worker-test
# Single-instance mode ports (cluster mode uses dynamic ports from cluster scripts)
TASKER_WEB_BIND_ADDRESS=0.0.0.0:8084

# Worker configuration
TASKER_CONFIG_PATH=${WORKSPACE_PATH}/config/tasker/worker-test.toml

# TypeScript worker template path
TASKER_TEMPLATE_PATH=${WORKSPACE_PATH}/tests/fixtures/task_templates/typescript

# TypeScript-specific
TYPESCRIPT_HANDLER_PATH=${WORKSPACE_PATH}/workers/typescript/tests/handlers
TASKER_FFI_LIBRARY_PATH=${CARGO_TARGET_DIR:-${WORKSPACE_PATH}/target}/debug/libtasker_worker.dylib

# FFI testing
FFI_BOOTSTRAP_TESTS=true
