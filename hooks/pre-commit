#!/bin/bash
# Pre-commit hook for Rust code quality and FFI validation
# Ensures code is formatted, passes clippy checks, and FFI bindings work before commit

set -e

echo "ğŸ”§ Running pre-commit hooks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ Error: cargo is not available. Please install Rust."
    exit 1
fi

# Check if we're in a Rust project
if [ ! -f "Cargo.toml" ]; then
    echo "âŒ Error: No Cargo.toml found. Are you in a Rust project?"
    exit 1
fi

echo "ğŸ“ Formatting code with rustfmt..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting issues found. Running cargo fmt to fix..."
    cargo fmt --all
    echo "âœ… Code formatted. Please review and stage the changes."
    echo "   Run: git add . && git commit"
    exit 1
fi
echo "âœ… Code formatting is clean"

echo "ğŸ” Running clippy checks..."
if ! SQLX_OFFLINE=true cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues that must be fixed before commit."
    echo "   Run: cargo clippy --fix --allow-dirty"
    exit 1
fi
echo "âœ… Clippy checks passed"

echo "ğŸ§ª Running basic compile check..."
# Check library and binary targets only (exclude tests which may need database)
if ! SQLX_OFFLINE=true cargo check --lib --bins --all-features; then
    echo "âŒ Compilation failed. Please fix errors before commit."
    exit 1
fi
echo "âœ… Compilation check passed"

echo "ğŸ‰ All pre-commit checks passed!"
