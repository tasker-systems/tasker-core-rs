{
  "name": "@tasker-systems/worker",
  "version": "0.1.0",
  "description": "TypeScript worker for tasker-core workflow orchestration",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ffi": {
      "import": "./dist/ffi/index.js",
      "types": "./dist/ffi/index.d.ts"
    },
    "./events": {
      "import": "./dist/events/index.js",
      "types": "./dist/events/index.d.ts"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "check": "biome check .",
    "check:fix": "biome check --fix .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "tasker",
    "workflow",
    "orchestration",
    "ffi",
    "worker",
    "typescript",
    "nodejs",
    "bun",
    "deno"
  ],
  "author": "Tasker Systems",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tasker-systems/tasker-core.git",
    "directory": "workers/typescript"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "bun-types": "^1.1.38",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "ffi-napi": "^4.0.3"
  },
  "peerDependenciesMeta": {
    "ffi-napi": {
      "optional": true
    }
  }
}
